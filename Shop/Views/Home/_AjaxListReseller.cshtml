@model  Shop.ViewModel.Home.PageListViewModel
@using MvcAjaxPager

<div id="divSearch">
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayName("نام نمایندکی")
            </th>

            <th>
                @Html.DisplayName("آدرس نمایندگی")
            </th>

            <th>
                @Html.DisplayName("استان")
            </th>

        </tr>

        @foreach (var item in Model.Resellers)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State.Name)
                </td>

            </tr>
        }

    </table>
    <div class="" style="direction: ltr">
        @Html.AjaxPager(Model.TotalItemCount, 10, Model.CurrentPage, "GetAjaxListReseller", "Home", null, new PagerOptions
   {
       FirstPageText = "اول",
       LastPageText = "آخر",
       MorePageText = "بیشتر",
       NextPageText = "بعد",
       PrevPageText = "قبل",
       Id = "divAjaxPager",
       AjaxUpdateTargetId = "divSearch"
   }, null, null)

    </div>
</div>

